<script>
  // Handle promo code application
  document.getElementById('apply-promo-btn').addEventListener('click', function() {
    const promoInput = document.getElementById('promo-code');
    const promoCode = promoInput.value.trim().toUpperCase();
    const successMessage = document.getElementById('promo-success');
    const errorMessage = document.getElementById('promo-error');
    
    // Hide any existing messages
    successMessage.classList.add('hidden');
    errorMessage.classList.add('hidden');
    
    // Valid promo codes
    const validPromoCodes = {
      'BIENVENUE15': '15%',
      'HEBERGEMENT50': '50%',
      'PACK2SERVICES': '20%',
      'CODE10': '10%'  // Example for the success message
    };
    
    // Check if code is valid
    if (validPromoCodes[promoCode]) {
      // Show success message with applied code
      successMessage.querySelector('.code-display').textContent = promoCode;
      successMessage.querySelector('.discount-amount').textContent = validPromoCodes[promoCode];
      successMessage.classList.remove('hidden');
      
      // Add animation
      successMessage.classList.add('animate__animated', 'animate__fadeIn');
      
      // Change button state
      const applyButton = document.getElementById('apply-promo-btn');
      applyButton.innerHTML = `
        <span>Appliqué</span>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 ml-2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      `;
      applyButton.classList.add('bg-green-600');
      applyButton.classList.remove('bg-blue-600', 'hover:bg-blue-700');
      applyButton.classList.add('hover:bg-green-700');
      
      // Disable input
      promoInput.disabled = true;
      
    } else if (promoCode === '') {
      // Show error for empty input
      errorMessage.querySelector('p').textContent = 'Veuillez entrer un code promo.';
      errorMessage.classList.remove('hidden');
      errorMessage.classList.add('animate__animated', 'animate__shakeX');
    } else {
      // Show error message
      errorMessage.querySelector('p').textContent = 'Ce code promo n\'est pas valide ou a expiré. Veuillez réessayer.';
      errorMessage.classList.remove('hidden');
      errorMessage.classList.add('animate__animated', 'animate__shakeX');
      
      // Shake the input
      promoInput.classList.add('animate__animated', 'animate__shakeX');
      setTimeout(() => {
        promoInput.classList.remove('animate__animated', 'animate__shakeX');
      }, 1000);
    }
  });
  
  // Handle clicking on promo items
  document.querySelectorAll('.promo-item').forEach(item => {
    item.addEventListener('click', function() {
      const code = this.getAttribute('data-code');
      document.getElementById('promo-code').value = code;
      
      // Scroll to the input and focus
      document.getElementById('promo-code').scrollIntoView({ behavior: 'smooth' });
      setTimeout(() => {
        document.getElementById('promo-code').focus();
      }, 600);
    });
  });
  
  // Handle copy code buttons
  document.querySelectorAll('.copy-code-btn').forEach(button => {
    button.addEventListener('click', function(e) {
      // Prevent the click from bubbling up to the parent
      e.stopPropagation();
      
      // Get the code from the sibling element
      const codeElement = this.previousElementSibling;
      const code = codeElement.textContent;
      
      // Copy to clipboard
      navigator.clipboard.writeText(code).then(() => {
        // Visual feedback
        const originalHTML = this.innerHTML;
        this.innerHTML = `
          <span class="sr-only">Copié</span>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
          </svg>
        `;
        
        setTimeout(() => {
          this.innerHTML = originalHTML;
        }, 2000);
      });
    });
  });
  
  // Remove animation classes after animation completes
  document.querySelectorAll('.animate__animated').forEach(element => {
    if (!element.classList.contains('animate__infinite')) {
      element.addEventListener('animationend', () => {
        element.classList.forEach(className => {
          if (className.startsWith('animate__') && className !== 'animate__animated') {
            element.classList.remove(className);
          }
        });
      });
    }
  });
</script>
</htmlCode>

